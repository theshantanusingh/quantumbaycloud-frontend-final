<%- include('partials/header') %>

<section class="hero">
  <div class="container">
    <div class="hero-content">
      <h1 class="hero-title">Blog & Resources</h1>
      <p class="hero-subtitle">
        Tips, guides, and updates from the QuantumBayCloud team. Learn how to get the most out of cloud storage and email hosting.
      </p>
    </div>
  </div>
</section>

<section class="blog-section">
  <div class="container">
    <div class="blog-grid">
      <% Object.keys(blogPosts).forEach(slug => { 
        const post = blogPosts[slug]; 
      %>
        <article class="blog-card">
          <div class="blog-image">
            <% 
              const icons = {
                'Cloud Storage': '📁',
                'Security': '🔒',
                'Collaboration': '👥',
                'Email': '📧',
                'Tips & Tricks': '⚡',
                'Product Updates': '🌐'
              };
            %>
            <%= icons[post.category] || '📄' %>
          </div>
          <div class="blog-content">
            <div class="blog-meta">
              <span class="blog-category"><%= post.category %></span>
              <span class="blog-date"><%= post.date %></span>
            </div>
            <h3><%= post.title %></h3>
            <p><%= post.excerpt %></p>
            <a href="/blog/<%= slug %>" class="blog-link">Read More →</a>
          </div>
        </article>
      <% }) %>
    </div>
  </div>
</section>

<section class="blog-subscribe">
  <div class="container">
    <div class="subscribe-box">
      <h2>Stay Updated</h2>
      <p>Subscribe to our newsletter for the latest tips, guides, and product updates.</p>
      <form class="subscribe-form">
        <input type="email" placeholder="Enter your email" required>
        <button type="submit" class="btn-primary">Subscribe</button>
      </form>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
