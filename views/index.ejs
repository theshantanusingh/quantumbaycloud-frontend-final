<%- include('partials/header') %>

  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <div class="hero-content">
        <h1 class="hero-title">Cloud Storage & Email Solutions for Your Business</h1>
        <p class="hero-subtitle">
          Secure file storage, team collaboration, and professional email—all in one platform.
        </p>
        <div class="hero-cta">
          <a href="#" class="btn-primary large">Get Started Free</a>
          <a href="#" class="btn-outline large">View Pricing</a>
        </div>
        <p class="hero-note">15 GB free storage • No credit card required</p>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="features">
    <div class="container">
      <h2 class="section-title">Powerful Features for Modern Teams</h2>
      
      <div class="features-grid">
        <div class="feature-card">
          <div class="feature-icon">📁</div>
          <h3>Cloud Storage</h3>
          <p>Store and organize files securely in the cloud. Access your data from anywhere, on any device.</p>
        </div>
        
        <div class="feature-card">
          <div class="feature-icon">📧</div>
          <h3>Professional Email</h3>
          <p>Custom domain email with powerful spam filtering and 99.9% uptime guarantee.</p>
        </div>
        
        <div class="feature-card">
          <div class="feature-icon">🔄</div>
          <h3>File Sync</h3>
          <p>Automatically sync files across all your devices. Never lose track of important documents.</p>
        </div>
        
        <div class="feature-card">
          <div class="feature-icon">👥</div>
          <h3>Team Collaboration</h3>
          <p>Share folders and files with team members. Control permissions and track changes.</p>
        </div>
        
        <div class="feature-card">
          <div class="feature-icon">🔒</div>
          <h3>End-to-End Encryption</h3>
          <p>Your files are protected with AES-256 encryption. Zero-knowledge architecture ensures privacy.</p>
        </div>
        
        <div class="feature-card">
          <div class="feature-icon">⏱️</div>
          <h3>Version History</h3>
          <p>Track file changes and restore previous versions. 30-day version history on all plans.</p>
        </div>

        <div class="feature-card">
          <div class="feature-icon">📎</div>
          <h3>Large File Sharing</h3>
          <p>Send files up to 10 GB via email or shareable links. No compression required.</p>
        </div>

        <div class="feature-card">
          <div class="feature-icon">📱</div>
          <h3>Mobile Apps</h3>
          <p>Native apps for iOS and Android. Access files and email on the go.</p>
        </div>

        <div class="feature-card">
          <div class="feature-icon">🌐</div>
          <h3>Web Access</h3>
          <p>Full-featured web interface. Manage files and email from any browser.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Storage & Email Section -->
  <section class="services">
    <div class="container">
      <div class="service-block">
        <div class="service-content">
          <h2>Cloud Storage Built for Teams</h2>
          <ul class="service-list">
            <li>Unlimited file uploads</li>
            <li>Team folders with granular permissions</li>
            <li>Advanced search and filters</li>
            <li>Offline access on desktop and mobile</li>
            <li>File recovery and trash management</li>
            <li>Public and private sharing options</li>
          </ul>
        </div>
        <div class="service-visual">
          <div class="storage-box">
            <div class="storage-item">
              <span class="item-icon">📄</span>
              <span class="item-name">Documents</span>
            </div>
            <div class="storage-item">
              <span class="item-icon">🖼️</span>
              <span class="item-name">Images</span>
            </div>
            <div class="storage-item">
              <span class="item-icon">🎬</span>
              <span class="item-name">Videos</span>
            </div>
          </div>
        </div>
      </div>

      <div class="service-block reverse">
        <div class="service-visual">
          <div class="email-box">
            <div class="email-header">
              <span>📥 Inbox</span>
            </div>
            <div class="email-item">
              <span class="email-subject">Welcome to QuantumBayCloud</span>
            </div>
            <div class="email-item">
              <span class="email-subject">Your storage is ready</span>
            </div>
          </div>
        </div>
        <div class="service-content">
          <h2>Professional Email Hosting</h2>
          <ul class="service-list">
            <li>Custom domain email addresses</li>
            <li>Advanced spam and virus protection</li>
            <li>25 GB mailbox storage per user</li>
            <li>Calendar and contacts integration</li>
            <li>IMAP, POP3, and SMTP support</li>
            <li>Email forwarding and aliases</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Pricing Section -->
  <section id="pricing" class="pricing">
    <div class="container">
      <h2 class="section-title">Simple Pricing for Everyone</h2>
      
      <div class="pricing-grid">
        <div class="pricing-card">
          <h3 class="plan-name">Free</h3>
          <div class="plan-price">
            <span class="amount">$0</span>
          </div>
          <ul class="plan-features">
            <li>15 GB Storage</li>
            <li>2 Email Accounts</li>
            <li>Basic File Sharing</li>
            <li>Mobile Apps</li>
            <li>Community Support</li>
          </ul>
          <a href="#" class="btn-outline">Get Started</a>
        </div>
        
        <div class="pricing-card featured">
          <h3 class="plan-name">Professional</h3>
          <div class="plan-price">
            <span class="amount">$12</span>
            <span class="period">/month</span>
          </div>
          <ul class="plan-features">
            <li>1 TB Storage</li>
            <li>10 Email Accounts</li>
            <li>Advanced Sharing</li>
            <li>Version History (30 days)</li>
            <li>Priority Support</li>
            <li>Custom Branding</li>
          </ul>
          <a href="#" class="btn-primary">Choose Plan</a>
        </div>
        
        <div class="pricing-card">
          <h3 class="plan-name">Business</h3>
          <div class="plan-price">
            <span class="amount">$25</span>
            <span class="period">/user/month</span>
          </div>
          <ul class="plan-features">
            <li>Unlimited Storage</li>
            <li>Unlimited Email Accounts</li>
            <li>Team Management</li>
            <li>Advanced Admin Controls</li>
            <li>24/7 Support</li>
            <li>SLA Guarantee</li>
          </ul>
          <a href="#" class="btn-outline">Contact Sales</a>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta">
    <div class="container">
      <h2>Start Using QuantumBayCloud Today</h2>
      <p>Sign up now and get 15 GB of free storage and 2 email accounts.</p>
      <a href="#" class="btn-primary large">Create Free Account</a>
    </div>
  </section>

