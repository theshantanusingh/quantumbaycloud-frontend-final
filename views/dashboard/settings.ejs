<%- include('../partials/dashboard-header') %>

<section class="dashboard-page">
  <div class="dashboard-container">
    <%- include('../partials/dashboard-sidebar', { currentPage: 'settings' }) %>

    <main class="dashboard-main">
      <div class="dashboard-header">
        <h1>Settings</h1>
      </div>

      <div class="settings-tabs">
        <button class="tab-btn active">Profile</button>
        <button class="tab-btn">Security</button>
        <button class="tab-btn">Notifications</button>
      </div>

      <div class="dashboard-card">
        <h3>Profile Information</h3>
        <form class="settings-form">
          <div class="form-group">
            <label>Full Name</label>
            <input type="text" value="John Doe">
          </div>
          <div class="form-group">
            <label>Email</label>
            <input type="email" value="user@example.com">
          </div>
          <div class="form-group">
            <label>Phone</label>
            <input type="tel" value="+91 9876543210">
          </div>
          <button type="submit" class="btn-primary">Save Changes</button>
        </form>
      </div>
    </main>
  </div>
</section>

</body>
</html>
