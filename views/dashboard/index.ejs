<%- include('../partials/dashboard-header') %>

<section class="dashboard-page">
  <div class="dashboard-container">
    <%- include('../partials/dashboard-sidebar', { currentPage: 'dashboard' }) %>

    <main class="dashboard-main">
      <div class="dashboard-header">
        <h1>Dashboard</h1>
      </div>

      <!-- Welcome Section -->
      <div class="welcome-section">
        <h2>Welcome back, User!</h2>
        <p>Here's what's happening with your account today.</p>
      </div>

      <!-- Stats Cards -->
      <div class="stats-grid">
        <div class="stat-card">
          <div class="stat-icon blue">📁</div>
          <div class="stat-info">
            <h3>Total Files</h3>
            <p class="stat-number">1,248</p>
            <span class="stat-change positive">+12% this month</span>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon green">💾</div>
          <div class="stat-info">
            <h3>Storage Used</h3>
            <p class="stat-number">42.8 GB</p>
            <span class="stat-change">of 1 TB</span>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon purple">👥</div>
          <div class="stat-info">
            <h3>Shared Files</h3>
            <p class="stat-number">89</p>
            <span class="stat-change positive">+5 new shares</span>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon orange">📧</div>
          <div class="stat-info">
            <h3>Email Storage</h3>
            <p class="stat-number">8.4 GB</p>
            <span class="stat-change">of 25 GB</span>
          </div>
        </div>
      </div>

      <!-- Storage Usage -->
      <div class="dashboard-card">
        <h3>Storage Usage</h3>
        <div class="storage-breakdown">
          <div class="storage-bar">
            <div class="storage-segment documents" style="width: 35%"></div>
            <div class="storage-segment images" style="width: 25%"></div>
            <div class="storage-segment videos" style="width: 20%"></div>
            <div class="storage-segment other" style="width: 15%"></div>
          </div>
          <div class="storage-legend">
            <div class="legend-item">
              <span class="legend-color documents"></span>
              <span>Documents (35%)</span>
            </div>
            <div class="legend-item">
              <span class="legend-color images"></span>
              <span>Images (25%)</span>
            </div>
            <div class="legend-item">
              <span class="legend-color videos"></span>
              <span>Videos (20%)</span>
            </div>
            <div class="legend-item">
              <span class="legend-color other"></span>
              <span>Other (15%)</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Recent Files -->
      <div class="dashboard-card">
        <div class="card-header">
          <h3>Recent Files</h3>
          <a href="/dashboard/files" class="view-all">View All →</a>
        </div>
        <div class="files-list">
          <div class="file-item">
            <span class="file-icon">📄</span>
            <div class="file-info">
              <h4>Q4 Marketing Report.pdf</h4>
              <p>Modified 2 hours ago • 2.4 MB</p>
            </div>
            <button class="btn-icon-sm">⋮</button>
          </div>
          <div class="file-item">
            <span class="file-icon">📊</span>
            <div class="file-info">
              <h4>Sales Dashboard 2025.xlsx</h4>
              <p>Modified yesterday • 842 KB</p>
            </div>
            <button class="btn-icon-sm">⋮</button>
          </div>
          <div class="file-item">
            <span class="file-icon">🎬</span>
            <div class="file-info">
              <h4>Product Demo Video.mp4</h4>
              <p>Modified 3 days ago • 156 MB</p>
            </div>
            <button class="btn-icon-sm">⋮</button>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="dashboard-card">
        <h3>Quick Actions</h3>
        <div class="quick-actions">
          <button class="action-btn">
            <span class="action-icon">📤</span>
            <span>Upload Files</span>
          </button>
          <button class="action-btn">
            <span class="action-icon">📁</span>
            <span>New Folder</span>
          </button>
          <button class="action-btn">
            <span class="action-icon">🔗</span>
            <span>Share Link</span>
          </button>
          <button class="action-btn">
            <span class="action-icon">📧</span>
            <span>Send Email</span>
          </button>
        </div>
      </div>
    </main>
  </div>
</section>

</body>
</html>
